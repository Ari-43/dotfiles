# i3 config file (v4)
# Sway(FX)-specific configuration. This configuration file will not be sourced by i3.

set $mod Mod4

# Input configuration {{{
input * {
	xkb_layout us
	xkb_variant dvorak
}
input type:touchpad {
	natural_scroll enabled
	tap enabled
	click_method clickfinger
	pointer_accel 0.2
#	accel_profile flat
	scroll_factor 2.0
}
input 2:10:TPPS/2_IBM_TrackPoint {
	pointer_accel 0.5
	scroll_factor 0.5
}

# Video output configuration
output 'ASUSTek COMPUTER INC ASUS VG32VQ1B 0x00039EBD' {
	mode 2560x1440@119.998Hz
}
output 'BOE 0x0BCA Unknown' {
	mode 2256x1504@59.999Hz
	scale 1.25
}
# }}}

# Locker/Screensaver {{{
#exec --no-startup-id xfce4-power-manager --daemon
#exec --no-startup-id xfce4-screensaver

# Support for Wayland is experimental and very unstable, replace this
#set $locker xfce4-screensaver-command --lock

bindsym $mod+mod1+l exec --no-startup-id $locker
bindsym Control+mod1+l exec --no-startup-id $locker
# }}}

# Wallpaper
exec --no-startup-id swaybg --mode fill --image $HOME/Pictures/wallpapers/framework/framework-exploded/framework-exploded-rosepine-highlight-iris.png

# GTK Theme
#exec $HOME/.config/gtk-3.0/read.sh
exec_always $HOME/.config/i3/scripts/set-gsettings

# Notifications
exec swaync

# Desktop panel/bar
#exec nwg-panel
#exec ags run
#exec sleep 5 && ags run ~/git/astal/examples/gtk3/js/osd/app.ts # There needs to be a delay between running multiple widgets
exec --no-startup-id waybar
exec_always killall -SIGUSR2 waybar

# Borders
default_border pixel 3
default_floating_border pixel 3
hide_edge_borders none
titlebar_border_thickness 3
## Hides window titles in tiled mode
hide_edge_borders --i3 none

